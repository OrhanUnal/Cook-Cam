<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Yemek_Tarif_Uygulamasi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="switchStyle">@style/CustomSwitch</item>
    </style>

    <style name="Theme.Yemek_Tarif_Uygulamasi" parent="Base.Theme.Yemek_Tarif_Uygulamasi" />

    <style name="ScreenBackground">
        <item name="android:background">@color/black</item>
    </style>
    <style name="CardBackground">
        <item name="android:background">@color/darkGrey</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="BackgroundTint">
        <item name="android:backgroundTint">@color/darkGrey</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbIcon">@drawable/thumb</item>
        <item name="track">@drawable/track</item>
    </style>
    <style name="calendarColor">
        <item name="mcv_arrowColor">@color/grey</item>
        <item name="mcv_selectionColor">@color/lavender</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/grey</item>
        <item name="android:weekNumberColor">@color/grey</item>
        <item name="android:headerYearTextAppearance">@color/grey</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/grey</item>
    </style>
    <style name="CustomExpendMore" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_expand_more_white</item>
    </style>
    <style name="CustomExpendLess" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_expand_less_white</item>
    </style>
    <style name="CustomDelete" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_delete_white</item>
    </style>
    <style name="CustomEdit" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_edit_white</item>
    </style>
</resources>
